/* components/main/common/comment-input/index.wxss */
.mask{
    width: 100%;
    height:100%;
    background: #000000;
    position: fixed;
    top: 0;
    z-index: 1000;
    opacity: 0.4;

}
.dialog_form{
    width: 100%;
    /* height: 400rpx; */
    height: 0;
    position:fixed;
    bottom: 0;
    z-index: 1001;
    background: #FFFFFF;
}
.dialog_form_in{
    width: 100%;
    padding: 0 40rpx 40rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}
.send_row{
    padding: 20rpx 0 20rpx 0;
    color: #cccccc;
}
.dialog_txt{
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #e8e8e8;
    border-radius: 10rpx;
    height: 200rpx;
}