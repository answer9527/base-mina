@import "/common/common.wxss";
.movie_con{
    padding:30rpx;
}
.movie_box{
    padding: 10rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #cccccc;
}
.movie_left .movie_title{
    font-size: 28rpx;
    font-weight: bold;
}
.movie_left .movie_intro{
    font-size: 24rpx;
    color: #cccccc;
    min-height: 48rpx;
    margin: 10rpx 0;
    box-sizing: border-box;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
}
.movie_thum{
    width: 150rpx;
    height: 160rpx;
    border-radius: 8rpx;
}
.count_row{
  font-size: 24rpx;
  color: #cccccc;
}

