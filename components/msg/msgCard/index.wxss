/* components/msg/msgCard/index.wxss */
.msg_card{
    display: flex;
    flex-direction: column;
    background: #FFFFFF;
    padding:40rpx 20rpx;
    border-radius: 20rpx;
    width: 100%;
    box-sizing: border-box;
    position: relative;
    border-top-right-radius: 0;
}
.card_con{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.msg_card>.status{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 0;
    right: 0;
}
.card_left{
    position: relative;
}
.card_left>image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.card_right{
    padding-left:40rpx;
    flex: 1;
}
.title_row{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    font-size: 28rpx;
}
.title{
    color: #295C9D;
}
.card_in{
    display: flex;
    flex-direction: column;
}
.comment{
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
}
.user{
    color: #295C9D; 
    padding-right: 10rpx;
}
.content{
    color: #949494;
    position: relative;
    padding: 10rpx 30rpx;
    margin: 20rpx 0;
    /* text-align: center; */
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.con_left{
    width: 14rpx;
    height: 14rpx;
    position: absolute;
    top: 0px;
    left: 0;
}
.con_right{
    width: 14rpx;
    height: 14rpx;
    position: absolute;
    bottom: 0px;
    right: 0;
}


.reply_row{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    flex: 1;
    padding-top: 30rpx;
  
}
.reply_row>input{
    height: 60rpx;
    flex: 1;
    border: 1rpx solid #CCCCCC;
    border-right: 0;
    padding-left: 40rpx;
    border-top-left-radius:60rpx;
    border-bottom-left-radius: 60rpx;
}
.reply_row>.reply_btn{
    background: #E7930C;
    height: 60rpx;
    line-height: 60rpx;
    color: #FFFFFF;
    padding: 0 16rpx;
    border: 1rpx solid #CCCCCC;
    border-left: 0;
    border-top-right-radius:60rpx;
    border-bottom-right-radius: 60rpx;
}
