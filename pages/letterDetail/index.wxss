/* pages/letterDetail/index.wxss */
.top_box{
    width: 100%;
}
.top_img{
    width: 100%;
    height: 200rpx;
}
.detail_box{
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.detail_box>.image_box{
    padding: 40rpx 0;
}
.title{
   font-size: 40rpx;
    font-weight: bold;
    padding: 20rpx 0;
    border-bottom: 2rpx dashed #383838;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
}
.userInfo_row{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    color: #383838;
    padding: 20rpx 0;
    width: 100%;
    box-sizing: border-box;

}
.userInfo_row>.type_block{
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}
.userInfo_row>.type_block>.type_tag{
    border: 1px solid #ff4d4f;
    background: #ffeded;
    color: #ff4d4f;
    padding: 2rpx 8rpx;
}
.user_name{
    padding-right: 40rpx;
}
.sub_box{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
}
.sub_box_in{
    position: relative;
}
.sub_title{
    display: inline;
    font-size: 40rpx;
    font-weight: bold;
    padding: 0 30rpx;
}
.line{
    height: 20rpx;
    width: auto;
    background: #FFC107;
    border-radius: 10rpx;
    position: relative;
    top: -16rpx;
    z-index: -1;
}


.letter_content{
    width: 100%;
    padding: 30rpx 0;
    text-indent: 56rpx;
   
}
.end_row{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 40px 0;
}
.end_row>.end_line{
    width: 200rpx;
    height: 4rpx;
    background: #c2c2c2;
}
.end_row>view:nth-child(2){
    color:#c2c2c2 ;
    padding: 0 20rpx;
}
