/* pages/beforeMessage/index.wxss */
page{
    height: 100%;
    margin: 0;
    
}

.page_box{
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.page_bg{
    width: 100%;
    height: 100%;
    display: block;
    position: fixed;
    top:0;
    z-index: 2;
}
.wave_icon{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 300rpx;

    display: block;
    z-index: 999;
    /* z-index: 55; */
}

.pageContent{
    width: 100%;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #FEFEFE;
   
}
.secret_top_bg{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #ECF7E7;
    padding: 60rpx 0 180rpx 0;
    box-sizing: border-box;
}
.secret_icon{
    width: 300rpx;
    height: 400rpx;
}
.notfound_icon{
    width: 400rpx;
    height: 400rpx;
}

.secret_content_card{
    width: 90%;
    background: #ffffff;
    /* height: 460rpx; */
    position: relative;
    top: -90rpx;
    border-radius: 10rpx;
    border: 2rpx solid #F5F5F5;
    padding:30rpx 40rpx 60rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.secret_content_card>.letter_title{
    font-weight: bold;
    font-size: 32rpx;
    text-align: center;
    padding: 10rpx 0;
}
.secret_content_card>.letter_content{
    font-size: 28rpx;
    text-indent: 56rpx;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:8;
    overflow: hidden;
    /* overflow: hidden; */

}
.bottom_row{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 0;
    width: 100%;
    box-sizing: border-box;
}
.bottom_row>.create_time{
    font-size: 24rpx;
}
.bottom_row>.remaining{
    font-size: 24rpx;
}
.detail_btn{
    position: absolute;
    background: #7BC623;
    bottom: -32rpx;
    font-size: 32rpx;
    padding: 10rpx 60rpx;
    color: #FFFFFF;
    border-radius: 30rpx;

}
.go_write{
background: #B8C7FF;
color: #ffffff;
padding: 10rpx 100rpx;
border-radius: 20rpx;
margin-top: 70rpx;

}
