/* pages/beforeMessage/index.wxss */
page{
    height: 100%;
    margin: 0;
    
}

.page_box{
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.page_bg{
    width: 100%;
    height: 100%;
    display: block;
    position: fixed;
    top:0;
    z-index: 2;
}
.wave_icon{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 300rpx;

    display: block;
    z-index: 999;
    /* z-index: 55; */
}
.wave_tip{
    position: fixed;
    bottom: 250rpx;
    z-index: 999;
    font-size: 24rpx;
    color: #9c9e9e;
}
.go_add{
    color: #535353;
    font-size: 24rpx;
    padding:10rpx;
}
.pageContent{
    width: 100%;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #FEFEFE;
   
}
.pageContent>.letter_list{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.secret_top_bg{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #ECF7E7;
    padding: 60rpx 0 180rpx 0;
    box-sizing: border-box;
}
.secret_icon{
    width: 300rpx;
    height: 400rpx;
}
.notfound_icon{
    width: 400rpx;
    height: 400rpx;
}

