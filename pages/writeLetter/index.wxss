/* pages/writeLetter/index.wxss */
.write_page{
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 40rpx;
}
.block_one{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.block_title_row{
    display: flex;
}
.block_title{
    background: linear-gradient(to right,#23AEF4,#157EC8);
    color: #FFFFFF;
    padding: 10rpx 120rpx 10rpx 40rpx;
    border-top-right-radius: 60rpx;
    border-bottom-right-radius: 60rpx;
}
.block_content{
    padding:20rpx 40rpx;
    width: 100%;
    box-sizing: border-box;
}
.content_in{
    padding: 20rpx 0;
}
.content_intro{
    font-size: 24rpx;
}
.form_row{
    display: flex;
    flex-direction: row;
    padding: 10rpx  0;
    align-items: center;
}
.form_row>label{
    padding-right: 20rpx;
        
}
.content_label{
    color: #999999;
    margin-bottom: 40rpx;
}
.form_row>input{
    background: #F3F3F3;
    padding: 15rpx;
    flex: 1;
}
.content_txt{
    background: #F3F3F3;
    width: 100%;
    padding: 20rpx;
    margin-top: 10rpx;
    box-sizing: border-box;
}

.form_row>image{
    width: 48rpx;
    height: 48rpx;
}
.form_row>.form_title{
    font-size: 28rpx;
    padding: 0 20rpx;
}
.form_row>.date{
    background: #F3F3F3;
    flex: 1;
    padding: 15rpx;
    color: #808080;
}

.block_three{
    width: 100%;
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.send_btn{
    padding: 15rpx 0;
    width: 100%;
    background: linear-gradient(to right,#10DFAB,#89B276);
    color: #FFFFFF;
    text-align: center;
    font-size: 36rpx;
    border-radius: 20rpx;
}