/* pages/addHole/index.wxss */
page{
    background: #FDFCF8
}
.page_container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
   
}
.page_top{
    width: 100%;
    box-sizing: border-box;
    background: #2B4ADC;
    padding: 40rpx 0 80rpx 40rpx;
    color: #FFFFFF;
    font-size: 60rpx;
}
.form_content{
    width: 92%;
    background: #FFFFFF;
    position: relative;
    height: 1000rpx;
    top: -40rpx;
    box-shadow: 3rpx 3rpx 15rpx 3rpx rgba(0, 0, 0, 0.1);
    border-radius: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}
.form_item{
    border-bottom: 2rpx solid #cccccc;
    padding: 16rpx 10rpx;
}
.select_box{
    width: 100%;
    color: #808080;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.select_box>view:nth-child(2){
    color: #cccccc;
}
.sheet_title{
    color: #cccccc!important;
}
.add_row{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
    /* position: absolute; */
    bottom: 20rpx;
}
